# Mantora Configuration
# Use this file to configure storage, safety policy, and limits.
# Note: Targets are now managed via the UI (mantora up).

# SQLite Database Location
# sqlite_path = "./data/sessions.db"

# Safety Policy
[policy]
protective_mode = true          # Enable safety checks
block_ddl = true                # Block CREATE, ALTER, DROP
block_dml = true                # Block INSERT, UPDATE, DELETE

# Resource Limits
[limits]
retention_days = 30
max_preview_rows = 20
