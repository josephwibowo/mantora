# Example config.toml configuration for local testing

# Allowed CORS origins for the UI/API
cors_allow_origins = [
  "http://localhost:3030",
  "http://127.0.0.1:3030",
  "http://localhost:5173",
  "http://127.0.0.1:5173",
]

[policy]
protective_mode = true
block_ddl = true
block_dml = true
block_multi_statement = true
block_delete_without_where = true

[limits]
preview_rows = 10
preview_bytes = 524288
preview_columns = 80
retention_days = 14
max_db_bytes = 0

# Session store database (optional; defaults to ~/.mantora/sessions.db)
sqlite_path = "./data/sessions.db"

[target]
type = "duckdb"
command = ["mcp-server-duckdb", "--db", "./demo.duckdb"]
